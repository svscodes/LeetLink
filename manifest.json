{
  "manifest_version": 3,
  "name": "LeetCode to GitHub Sync",
  "version": "1.0.0",
  "description": "Automatically push your LeetCode solutions to GitHub",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "https://leetcode.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}